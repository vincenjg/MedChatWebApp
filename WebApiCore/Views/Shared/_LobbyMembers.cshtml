@using WebApiCore.Models
@model PractitionerLobbyViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/carousel.css" />
    <style>
        .card {
            text-align: center;
            border: 1px solid #D9D7DA;
            padding: 12px;
        }

        .card-img-top {
            width: 100%;
            height: 15vw;
            object-fit: cover;
            background-color: #ffffff;
        }
    </style>
}

@if (Model.Patients != null)
{
    @foreach (Patient patient in Model.Patients)
    {
        <div class="card" style="max-width: 18rem;">
            <img class="card-img-top card-header rounded-circle z-depth-2" src="~/imgs/icon.png" alt="card image cap" />
            <div class="card-body">
                <h5 class="card-title" style="text-align: center;">@patient.FirstName</h5>
                <p class="card-text" style="text-align: center;">@patient.LastName</p>
            </div>
        </div>
    }
}
