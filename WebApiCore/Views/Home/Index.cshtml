@{
    ViewData["Title"] = "Welcome to EZ Medchat";
}
<h1>@ViewData["Title"]</h1>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/RLobby.png" class="d-block w-100" alt="...">
            <div class="carousel-caption" role="option">
                <p>
                    Waiting room to see your doctor.
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/template.JPG" class="d-block w-100" alt="...">
            <div class="carousel-caption" role="option">
                <p>
                    Customizable templates for a variety of scenarios.
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/RSchedule.png" class="d-block w-100" alt="...">
            <div class="carousel-caption text-dark" role="option">
                <p>
                    <b>Schedule appointments with Practitioners or Patients.</b>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/RTwilio.png" class="d-block w-100" alt="...">
            <div class="carousel-caption" role="option">
                <p>
                    Video chat between Patient and Practitioner.
                </p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <h2>Application uses</h2>
        <ul>
            <li>Lobby Pages</li>
            <li>For Patients: Join lobby when Practitioner's online.</li>
            <li>For Practitioners: Appear online, create lobby, start video call.</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Templates</h2>
        <ul>
            <li>Create custom templates and store them.</li>
            <li>Retrieve custom templates to update, edit, store new information, and save them as new templates.</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Scheduling</h2>
        <ul>
            <li>Schedule apptointments with your Practitioner or Patient.</li>
        </ul>
    </div>

</div>